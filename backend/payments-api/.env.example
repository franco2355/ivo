# ==============================================
# PAYMENTS API - ENVIRONMENT VARIABLES
# ==============================================

# Server Configuration
PORT=8083

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=payments

# Mercado Pago Configuration
# Obtén tus credenciales en: https://www.mercadopago.com.ar/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=your_access_token_here
MERCADOPAGO_PUBLIC_KEY=your_public_key_here
MERCADOPAGO_WEBHOOK_SECRET=

# RabbitMQ Configuration
# URL formato: amqp://usuario:contraseña@host:puerto/
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=gym_events

# Application URLs (para callbacks y webhooks)
# En producción, cambiar a tu dominio real
APP_URL=http://localhost:5173
API_URL=http://localhost:8083

# Callback URLs (auto-generadas, pero puedes sobrescribirlas)
# SUCCESS_URL=${APP_URL}/payment/success
# FAILURE_URL=${APP_URL}/payment/failure
# PENDING_URL=${APP_URL}/payment/pending
